{% extends "layout/main.twig" %}

{% block content %}
  <section class="p-8 max-w-2xl mx-auto">
    <div class="mb-8">
      <h2 class="text-4xl font-bold text-gray-800 mb-2">{{ title }}</h2>
      <p class="text-gray-600">Modifiez les informations du type de mot de passe</p>
    </div>

    <form action="{{ url('/password-types/' ~ password_type.id ~ '/update') }}" method="POST" class="space-y-5 bg-white p-6 rounded-lg shadow-md">
      
      <div>
        <label for="label" class="block mb-2 font-semibold text-gray-700">
          <i class="mdi mdi-label"></i> Nom du type de mot de passe :
        </label>
        <input type="text" id="label" name="label" 
               value="{{ password_type.label }}"
               required
               class="w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-300">
      </div>

      <div>
        <label for="color" class="block mb-2 font-semibold text-gray-700">
          <i class="mdi mdi-palette"></i> Couleur :
        </label>
        <div class="flex gap-3 items-center">
          <input type="color" id="color-picker" 
                 value="{{ password_type.color }}"
                 class="w-16 h-10 rounded cursor-pointer border border-gray-300">
          <input type="text" id="color" name="color" 
                 value="{{ password_type.color }}"
                 placeholder="#3490dc ou red"
                 required
                 class="flex-1 border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-300">
          <div class="w-12 h-10 rounded border border-gray-300" 
               id="color-preview" 
               style="background-color: {{ password_type.color }};"></div>
        </div>
      </div>

      <div class="pt-6 flex gap-3">
        <button type="submit"
                class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition flex items-center gap-2">
          <i class="mdi mdi-check"></i> Mettre à jour
        </button>
        <a href="{{ url('/password-types') }}" 
           class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 transition flex items-center gap-2">
          <i class="mdi mdi-close"></i> Annuler
        </a>
        <form action="{{ url('/password-types/' ~ password_type.id ~ '/delete') }}" method="POST" class="inline ml-auto">
          <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce type ?')"
                  class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition flex items-center gap-2">
            <i class="mdi mdi-delete"></i> Supprimer
          </button>
        </form>
      </div>
    </form>
  </section>

  <script>
    const colorInput = document.getElementById('color');
    const colorPicker = document.getElementById('color-picker');
    const colorPreview = document.getElementById('color-preview');

    // Synchroniser le color picker avec l'input text
    colorPicker.addEventListener('change', function() {
      colorInput.value = this.value;
      colorPreview.style.backgroundColor = this.value;
    });

    colorInput.addEventListener('change', function() {
      colorPreview.style.backgroundColor = this.value;
      try {
        colorPicker.value = this.value;
      } catch (e) {
        // Si le format n'est pas reconnu par le color picker
      }
    });

    colorInput.addEventListener('input', function() {
      colorPreview.style.backgroundColor = this.value;
    });
  </script>
{% endblock %}
