{% extends "layout/main.twig" %}

{% block content %}

<div class="p-8  mx-auto">
    <div class="mb-8">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">{{ title }}</h2>
        <p class="text-gray-600 text-lg mb-2">{{ project.description }}</p>
        <p class="text-gray-500 text-sm"><i class="mdi mdi-calendar"></i> Créé le : {{ project.created_at }}</p>
    </div>

    <div class="mb-6 flex justify-between items-center">
        <h3 class="text-2xl font-bold text-gray-800">Mots de passe du projet</h3>
        <a href="{{ url('/projects/' ~ project_id ~ '/passwords/create') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition flex items-center gap-2">
            <i class="mdi mdi-plus"></i> Ajouter un mot de passe
        </a>
    </div>

    {% if passwords is empty %}
        <div class="bg-gray-100 border border-gray-300 rounded-lg p-6 text-center">
            <i class="mdi mdi-lock text-gray-400 text-4xl block mb-2"></i>
            <p class="text-gray-600">Aucun mot de passe associé à ce projet.</p>
        </div>
    {% else %}
        <div class="overflow-x-auto bg-white rounded-lg shadow">
            <table class="w-full">
                <thead>
                    <tr class="bg-gray-100 border-b border-gray-300">
                        <th class="text-left p-4 font-semibold text-gray-700"><i class="mdi mdi-tag-multiple"></i> Type</th>
                        <th class="text-left p-4 font-semibold text-gray-700"><i class="mdi mdi-label"></i> Label</th>
                        <th class="text-left p-4 font-semibold text-gray-700"><i class="mdi mdi-form-textbox"></i> Champs</th>
                        <th class="text-left p-4 font-semibold text-gray-700"><i class="mdi mdi-file"></i> Fichiers</th>
                        <th class="text-left p-4 font-semibold text-gray-700"><i class="mdi mdi-shield-check"></i>level</th>
                        <th class="text-left p-4 font-semibold text-gray-700"><i class="mdi mdi-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for p in passwords %}
                    <tr class="border-b border-gray-300 hover:bg-gray-50 transition">
                        <td class="p-4 text-gray-800">
                        <div class="inline-block px-3 py-1 rounded-full text-white font-medium"
                             style="background-color: {{ p.type_color }};">
                        </div>
                            {{ p.type_label }}
                        </td>
                        <td class="p-4 text-gray-800 font-semibold">{{ p.label }}</td>
                        
                      
                        
                        <td class="p-4">
                            {% for key, value in p.extra %}
                                <div class="field-line mb-3 p-2 bg-gray-50 rounded border border-gray-200">
                                    <div class="flex justify-between items-start gap-2 mb-2">
                                        <div class="flex-1">
                                            <strong class="text-gray-700">{{ key }}</strong>
                                            <span class="hidden-value hidden ml-2 text-gray-600">{{ value }}</span>
                                            <span class="hidden-mask ml-2 text-gray-400">••••••••••</span>
                                        </div>
                                    </div>
                                    <div class="flex gap-2">
                                        <button type="button"
                                                class="toggle-btn bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm transition flex items-center gap-1"
                                                onclick="toggleField(this)">
                                            <i class="mdi mdi-eye"></i> Afficher
                                        </button>
                                        <button type="button"
                                                class="copy-btn bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm transition flex items-center gap-1"
                                                onclick="copyField(this)"
                                                data-value="{{ value }}">
                                            <i class="mdi mdi-content-copy"></i> Copier
                                        </button>
                                    </div>
                                </div>
                            {% endfor %}
                        </td>
                        
                        <td class="p-4">
                            {% if filesPassword[p.id] is not empty %}
                                <ul class="space-y-2">
                                    {% for file in filesPassword[p.id] %}
                                        <li class="flex items-center gap-2 p-2 bg-gray-50 rounded border border-gray-200">
                                            <a href="{{ url('/files/' ~ file.id ~ '/download') }}" class="text-blue-600 hover:text-blue-800 transition flex items-center gap-2 flex-1">
                                                <i class="mdi mdi-download"></i>
                                                <span class="truncate">{{ file.filename }}</span>
                                            </a>
                                            <form action="{{ url('/files/' ~ file.id ~ '/delete') }}" method="POST" class="inline">
                                                <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce fichier ?')" class="bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded text-xs transition">
                                                    <i class="mdi mdi-delete"></i>
                                                </button>
                                            </form>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <span class="text-gray-500"><i class="mdi mdi-file-off"></i> Aucun fichier</span>
                            {% endif %}
                        </td>
                      <td class="p-4">
                            {% if p.strength %}
                                <div class="flex items-center gap-2">
                                    {% if p.strength.level == 'faible' %}
                                        <span class="inline-block px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-medium">
                                            <i class="mdi mdi-alert"></i> {{ p.strength.level }}
                                        </span>
                                        <div class="w-20 bg-gray-200 rounded-full h-2">
                                            <div class="bg-red-500 h-2 rounded-full" style="width: {{ p.strength.score }}%"></div>
                                        </div>
                                        <span class="text-sm text-gray-700">{{ p.strength.score }}%</span>
                                    {% elseif p.strength.level == 'moyen' %}
                                        <span class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">
                                            <i class="mdi mdi-alert-circle"></i> {{ p.strength.level }}
                                        </span>
                                        <div class="w-20 bg-gray-200 rounded-full h-2">
                                            <div class="bg-yellow-500 h-2 rounded-full" style="width: {{ p.strength.score }}%"></div>
                                        </div>
                                        <span class="text-sm text-gray-700">{{ p.strength.score }}%</span>
                                    {% else %}
                                        <span class="inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
                                            <i class="mdi mdi-check-circle"></i> {{ p.strength.level }}
                                        </span>
                                        <div class="w-20 bg-gray-200 rounded-full h-2">
                                            <div class="bg-green-500 h-2 rounded-full" style="width: {{ p.strength.score }}%"></div>
                                        </div>
                                        <span class="text-sm text-gray-700">{{ p.strength.score }}%</span>
                                    {% endif %}
                                </div>
                            {% else %}
                                <span class="text-gray-500">-</span>
                            {% endif %}
                        </td>
                        
                        <td class="p-4">
                            <div class="flex gap-2">
                                <a href="{{ url('/projects/' ~ project_id ~ '/passwords/' ~ p.id ~ '/edit') }}" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-2 rounded transition flex items-center gap-1">
                                    <i class="mdi mdi-pencil"></i> Modifier
                                </a>
                                <form action="{{ url('/projects/' ~ project_id ~ '/passwords/' ~ p.id ~ '/delete') }}" method="POST" class="inline">
                                    <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce mot de passe ?')" class="bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded transition flex items-center gap-1">
                                        <i class="mdi mdi-delete"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

{% endblock %}


