{% extends "layout/main.twig" %}

{% block content %}
  <section class="p-8 max-w-7xl mx-auto">
    <div class="mb-8 flex justify-between items-center">
      <h2 class="text-4xl font-bold text-gray-800">{{ title }}</h2>
      <a href="{{ url('projects/create') }}" 
         class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
        <i class="mdi mdi-plus"></i> Créer un projet
      </a>
    </div>

    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="bg-gray-100 border-b border-gray-300">
            <th class="py-3 px-4 text-left text-gray-700 font-semibold"><i class="mdi mdi-folder"></i> Nom du projet</th>
            <th class="py-3 px-4 text-left text-gray-700 font-semibold"><i class="mdi mdi-information"></i> Description</th>
            <th class="py-3 px-4 text-left text-gray-700 font-semibold"><i class="mdi mdi-calendar"></i> Date de création</th>
            <th class="py-3 px-4 text-left text-gray-700 font-semibold"><i class="mdi mdi-cog"></i> Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for project in projects %}
            <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
              <td class="py-3 px-4 font-semibold text-gray-800">
                <a href="{{ url('projects/' ~ project.id ~ '/show') }}" class="text-blue-600 hover:text-blue-800 hover:underline transition">
                  {{ project.name }}
                </a>
              </td>
              <td class="py-3 px-4 text-gray-600">{{ project.description }}</td>
              <td class="py-3 px-4 text-gray-500">{{ project.created_at | date('d/m/Y') }}</td>
              <td class="py-3 px-4">
                <div class="flex gap-2">
                  <a href="{{ url('projects/' ~ project.id ~ '/show') }}" 
                     class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm transition inline-flex items-center gap-1">
                    <i class="mdi mdi-eye"></i> Afficher
                  </a>
                  <a href="{{ url('projects/' ~ project.id ~ '/edit') }}" 
                     class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-sm transition inline-flex items-center gap-1">
                    <i class="mdi mdi-pencil"></i> Modifier
                  </a>
                  <form action="{{ url('projects/' ~ project.id ~ '/delete') }}" method="POST" class="inline">
                    <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?')" 
                            class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm transition inline-flex items-center gap-1">
                      <i class="mdi mdi-delete"></i> Supprimer
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="4" class="text-center text-gray-400 py-8">
                <i class="mdi mdi-folder-off text-4xl block mb-2"></i>
                Aucun projet trouvé.
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>
{% endblock %}
