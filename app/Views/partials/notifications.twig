

<div class="fixed top-4 right-4 z-50 space-y-3 bg-white" id="notifications-container">
    {% for n in notifications %}
        <div class="notification alert alert-{{ n.type }} p-4 rounded-lg shadow-lg flex items-start gap-3 min-w-96 animate-slideIn" data-type="{{ n.type }}">
            {% if n.type == 'success' %}
                <div class="flex-shrink-0">
                    <i class="mdi mdi-check-circle text-green-600 text-2xl"></i>
                </div>
                <div class="flex-1">
                    <h3 class="text-green-800 font-semibold">Succès</h3>
                    <p class="text-green-700 text-sm mt-1">{{ n.message }}</p>
                </div>
            {% elseif n.type == 'error' %}
                <div class="flex-shrink-0">
                    <i class="mdi mdi-close-circle text-red-600 text-2xl"></i>
                </div>
                <div class="flex-1">
                    <h3 class="text-red-800 font-semibold">Erreur</h3>
                    <p class="text-red-700 text-sm mt-1">{{ n.message }}</p>
                </div>
            {% elseif n.type == 'warning' %}
                <div class="flex-shrink-0">
                    <i class="mdi mdi-alert-circle text-yellow-600 text-2xl"></i>
                </div>
                <div class="flex-1">
                    <h3 class="text-yellow-800 font-semibold">Attention</h3>
                    <p class="text-yellow-700 text-sm mt-1">{{ n.message }}</p>
                </div>
            {% else %}
                <div class="flex-shrink-0">
                    <i class="mdi mdi-information-outline text-blue-600 text-2xl"></i>
                </div>
                <div class="flex-1">
                    <h3 class="text-blue-800 font-semibold">Information</h3>
                    <p class="text-blue-700 text-sm mt-1">{{ n.message }}</p>
                </div>
            {% endif %}
            <button class="text-gray-400 hover:text-gray-600 transition" onclick="this.parentElement.remove()">
                <i class="mdi mdi-close text-xl"></i>
            </button>
        </div>
    {% endfor %}
</div>

<style>
    @keyframes slideIn {
        from {
            transform: translateX(500px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
    
    .animate-slideIn {
        animation: slideIn 0.3s ease-out;
    }
    
    .alert.alert-success {
        @apply bg-green-50 border border-green-200;
    }
    
    .alert.alert-error {
        @apply bg-red-50 border border-red-200;
    }
    
    .alert.alert-warning {
        @apply bg-yellow-50 border border-yellow-200;
    }
    
    .alert.alert-info {
        @apply bg-blue-50 border border-blue-200;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const notifications = document.querySelectorAll('.notification');
        notifications.forEach(notification => {
            // Auto-fermer la notification après 5 secondes
            setTimeout(() => {
                notification.style.transition = 'opacity 0.3s ease-out';
                notification.style.opacity = '0';
                setTimeout(() => notification.remove(), 300);
            }, 5000);
        });
    });
</script>
